{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "A simple template repo",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/main.css --minify",
    "dev:css": "tailwindcss -i ./src/public/css/tailwind.css -o ./src/public/css/main.css --watch",
    "dev": "concurrently \"npm run dev:css\" \"tsx watch src/index.ts\"",
    "build": "npm run build:css && tsc && copyfiles -u 1 src/views/**/* dist/ && copyfiles -u 1 src/public/**/* dist/",
    "start": "node dist/index.js",
    "cli:build": "tsc",
    "cli:dev": "tsx watch src/cli/index.ts",
    "cli:start": "node dist/cli/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.5",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/node": "^24.10.0",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.16.3",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
